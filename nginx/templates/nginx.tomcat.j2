server {
  listen      80;
  listen       [::]:80;
  server_name  {{ ansible_hostname }} www.{{ ansible_hostname }};
  location / {
    proxy_pass  http://{{ ansible_hostname }}:{{ app_port }}/{{ app_path }};
  }
}

server {
  listen       {{ app_port }};
  listen       [::]:{{ app_port }};
  server_name  {{ ansible_hostname }} www.{{ ansible_hostname }};
  location / {
    proxy_pass  http://{{ ansible_hostname }}:{{ app_port }}/{{ app_path }};
  }
}
